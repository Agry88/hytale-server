# =============================================================================
# Hytale Server Configuration
# Generated by Hytale Compose Builder
# https://setuphytale.com
# =============================================================================

# Initial heap size
JAVA_XMS=1G

# Maximum heap size
JAVA_XMX=4G

# authenticated or offline
AUTH_MODE=authenticated

# Server name displayed in browser
SERVER_NAME=Hytale Server

# Maximum player count
MAX_PLAYERS=100

# Maximum view distance
MAX_VIEW_RADIUS=32

# release or pre-release
HYTALE_PATCHLINE=release

RAILPACK_SHELL_SCRIPT=start.sh